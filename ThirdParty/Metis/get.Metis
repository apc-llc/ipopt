#!/bin/sh

set -e

wgetcmd=wget
wgetcount=`which wget 2>/dev/null | wc -l`
if test ! $wgetcount = 1; then
  echo "Utility wget not found in your PATH."
  if test `uname` = Darwin; then
    wgetcmd=ftp
    echo "Using ftp command instead."
  elif test `uname` = FreeBSD; then
    wgetcmd=fetch
    echo "Using fetch command instead."
  else
    exit -1
  fi
fi

echo " "
echo "Running script for preparing the source code for the METIS"
echo " "

if [ ! -e metis.fetch ]; then
  echo "Downloading the source code from glaros.dtc.umn.edu..."
  if ! ( $wgetcmd http://glaros.dtc.umn.edu/gkhome/fetch/sw/metis/OLD/metis-4.0.3.tar.gz && touch metis.fetch ) ;
  then
    exit 1;
  fi
fi

rm -rf metis-4.0

echo "Unpacking the source code..."
tar xf metis-4.0.3.tar.gz

echo "Renaming directory to match source code name..."
mv metis-4.0.? metis-4.0

echo " "
echo "Done preparing the source code for METIS."
echo " "

